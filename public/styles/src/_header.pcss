.header {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 4rem;
  margin: 0;
  padding: 1.2rem 0;
  text-align: center;
  border-bottom: 1px solid var(--color-gray--light);
  background-color: #fff;
}

.header-logo {
  width: 1.8rem;
  height: auto;
}

.header-link {
  position: absolute;
  top: 0.9rem;
  left: var(--margin-normal);
  color: var(--color-primary);
}
